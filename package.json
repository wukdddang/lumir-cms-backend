{
  "name": "lumir-cms-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run build && npm run typeorm -- migration:generate -d dist/src/migration.datasource.js",
    "migration:run": "npm run build && npm run typeorm -- migration:run -d dist/src/migration.datasource.js",
    "migration:revert": "npm run build && npm run typeorm -- migration:revert -d dist/src/migration.datasource.js",
    "migration:show": "npm run build && npm run typeorm -- migration:show -d dist/src/migration.datasource.js",
    "backup": "ts-node -r tsconfig-paths/register scripts/backup/run-backup.ts",
    "backup:cleanup": "ts-node -r tsconfig-paths/register scripts/backup/cleanup-backups.ts",
    "backup:list": "ts-node -r tsconfig-paths/register scripts/backup/list-backups.ts",
    "backup:restore": "ts-node -r tsconfig-paths/register scripts/backup/restore-backup.ts",
    "migration:check-schema": "ts-node -r tsconfig-paths/register scripts/migration/check-schema.ts",
    "migration:apply-schema": "ts-node -r tsconfig-paths/register scripts/migration/apply-schema-changes.ts",
    "migration:from-mongodb": "ts-node -r tsconfig-paths/register scripts/migration/migrate-from-mongodb.ts",
    "migration:check-categories": "ts-node -r tsconfig-paths/register scripts/migration/check-default-categories.ts",
    "migration:create-categories": "ts-node -r tsconfig-paths/register scripts/migration/create-default-categories.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.965.0",
    "@faker-js/faker": "^10.2.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/typeorm": "^11.0.0",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/bson": "^4.0.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "bson": "^7.1.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "roots": [
      "<rootDir>/test/domain",
      "<rootDir>/test/business",
      "<rootDir>/test/context"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(uuid|@faker-js)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^uuid$": "<rootDir>/node_modules/uuid/dist/index.js",
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@domain/(.*)$": "<rootDir>/src/domain/$1",
      "^@context/(.*)$": "<rootDir>/src/context/$1",
      "^@business/(.*)$": "<rootDir>/src/business/$1",
      "^@interface/(.*)$": "<rootDir>/src/interface/$1",
      "^@libs/(.*)$": "<rootDir>/libs/$1"
    }
  }
}
